<div class="page-header">
  <h1>
    Weekly Action
    <% if current_user.admin == true %>
    <a href="/actions/new" class="btn btn-lg btn-success">Add A New Action</a>
    <% end %>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Contestant</th>
        <th>What Happened?</th>
        <th>Point value</th>
        <th>Week</th>
        <th></th>
      </tr>

      <% @actions.each do |action| %>
      <tr>
        <td><a href="/casts/<%= action.cast_id %>"><%= action.cast.name %></td>
        <td><%= action.play %></td>
        <td><%= action.point_value %></td>
        <td><%= action.week %></td>
        <td>
        <% if current_user.admin == true %>
          <a href="/actions/<%= action.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_action/<%= action.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
