<div class="page-header">
  <h1>
    Meet the Cast
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Bio</th>
        <th>Photo</th>
      </tr>

      <% @casts.each do |cast| %>
      <tr>
        <td><a href="/casts/<%= cast.id %>"> <%= cast.name %></a></td>
        <td><%= truncate(cast.bio) %> <a href="/casts/<%= cast.id %>"> Read More</a></td>
        <td><a href="/casts/<%= cast.id %>">
          <img src="<%= cast.cast_img %>" class="img-responsive">
        </a></td>
        <% if current_user.admin == true %>
        <td>
          <a href="/casts/<%= cast.id %>" class="btn btn-primary">Show</a>
          <a href="/casts/<%= cast.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_cast/<%= cast.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
        <% end %>
      </tr>
      <% end %>
    </table>
  </div>
</div>
<% if current_user.admin == true %>
  <a href="/casts/new" class="btn btn-lg btn-success">Add Contestant</a>
  </a>
<% end %>
