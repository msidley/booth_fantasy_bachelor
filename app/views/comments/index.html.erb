<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dd><img src="https://static.wixstatic.com/media/abc663_f918bafd4c61474cb36ba6cd55955715.jpg/v1/fill/w_351,h_86,al_c,q_80,usm_0.66_1.00_0.01/abc663_f918bafd4c61474cb36ba6cd55955715.jpg" class="img-responsive"></dd>
    </dl>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Body</th>
        <th>Actions</th>
      </tr>

      <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user_id %></td>
        <td><%= comment.body %></td>
        <td>
          <a href="/comments/<%= comment.id %>" class="btn btn-primary">Show</a>
          <a href="/comments/<%= comment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_comment/<%= comment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
